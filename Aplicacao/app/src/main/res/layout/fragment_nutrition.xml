<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.App.NutritionFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="623dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlanosNutricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/StringPlanos"
            android:textColor="#000000"
            android:textSize="34sp" />

        <ListView
            android:id="@+id/lvListNutritionPlan"
            android:layout_width="match_parent"
            android:layout_height="263dp">

        </ListView>

        <TextView
            android:id="@+id/tvConsultasNutricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/StringConsultas"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="129dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="104dp">

            <Button
                android:id="@+id/btnMarcacaoNutricao"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF0096FB"
                android:text="@string/StringMarcacao"
                android:textColor="#fafafa"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>